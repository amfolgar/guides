#
# Web (NOTE: If web-only, remove "cd web")
#

cd web
curl https://install.meteor.com/ | sh
meteor --version
meteor npm install
cp /home/runner/settings.json settings.json
meteor npm run lint
meteor npm test



#
# Mobile (Expo) (NOTE: If web-only, remove "cd ../mobile")
#

npm install -g exp
cd ../mobile
mv app-staging.json app.json
cat app.json
npm install
npm run lint
npm test
npm --version
node --version
exp --version
